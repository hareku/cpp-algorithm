{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build main.cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "main.out",
                "-std=c++14",
                "-I",
                "./ac-library",
                "-DLOCAL"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Bundle main.cpp to bundle.cpp",
            "type": "shell",
            "command": "oj-bundle",
            "args": [
                "main.cpp",
                ">|",
                "bundle.cpp"
            ],
            "problemMatcher": []
        }
    ]
}
